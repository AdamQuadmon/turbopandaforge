{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base Config",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2022"],

    /* Performances */
    "skipLibCheck": true,

    /* Dev helpers */
    "preserveWatchOutput": true,

    "baseUrl": "./",
    "target": "ES2022",
    "noEmit": true,
    // Generate corresponding '.map' file for debugging.
    "sourceMap": true,
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
